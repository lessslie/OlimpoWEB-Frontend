{
  "version": 2,
  "buildCommand": "npm install @babel/runtime react-quill && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://olimpoweb-backend.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://olimpoweb-backend.onrender.com/api"
  }
}